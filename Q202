// Happy Number

class Solution {
    public boolean isHappy(int n) 
    {
        HashSet<Integer> hs= new HashSet<>();
        while(n!=1)
        {
            if(hs.contains(n))
                return false;
            
            hs.add(n);

            int sum= 0;
            while(n!=0)
            {
                sum= sum + (int)Math.pow(n%10,2);
                n= n/10;
            }
            n= sum;
        }
        return true;
    }
}
