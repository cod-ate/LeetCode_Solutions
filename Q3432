// Count Partitions with Even Sum Difference

class Solution {
    public int countPartitions(int[] nums) 
    {
        int count= 0;
        int total= 0;
        for(int val: nums)
            total+=val;
        int left= 0;
        for(int i=0; i<nums.length-1; i++)
        {
            left+=nums[i];
            int right= total-left;
            if((left-right) % 2 ==0)
                count++;
        }
        return count;
    }
}
